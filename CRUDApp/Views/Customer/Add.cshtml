<!--binding the model to the cshtml-->
@model CRUDApp.Models.AddCustomerViewModel

<h1>Add New Customer</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Name:<span style="color:red"> *</span></label>
        <input type="text" class="form-control" asp-for="Name"/>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Phone No.:<span style="color:red"> *</span></label>
        <input type="number" class="form-control" asp-for="Phone" />
        <span class="text-danger" asp-validation-for="Phone"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Email:<span style="color:red"> *</span></label>
        <input type="email" class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="member" asp-for="Member" />
        <label class="form-check-label" for="member">Member</label>
    </div>

    <div>
        <span style="color:red"> *</span> Required
    </div>

    <!--after clicking save, info will be recorded and be
        sent to the http post method in controller-->
    <div class="mt-3">
        <button type="submit" class="btn btn-primary"><i class="bi bi-floppy"></i></button>
        <button type="button" class="btn btn-primary" onclick="history.back()"><i class="bi bi-x-lg"></i></button>

    </div>

    @if (Model is null)
    {
        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Are you sure?</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Do you want to delete this user?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    }
        

</form>
