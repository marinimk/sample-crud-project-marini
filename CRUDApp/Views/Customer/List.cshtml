@{
}

@model List<CRUDApp.Models.Entities.Customer>

<h1>Customers</h1>

<table class="table">
    <thead>
        <th>id</th>
        <th>name</th>
        <th>phone</th>
        <th>email</th>
        <th></th>

    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
                <td>@customer.Phone</td>
                <td>@customer.Email</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.Id">edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>